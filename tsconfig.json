{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": [
    "backend/src/**/*.ts",  // Novo caminho para os arquivos TypeScript
    "backend/tests/**/*.ts"  // Novo caminho para os arquivos de teste
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}