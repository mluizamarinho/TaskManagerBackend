generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String 
  type String @default("PADR√ÉO")
  tasks Task[]
}

model Task {
  id String @id @default(uuid())
  name String 
  type String @default("A FAZER")

  userID String?
  user User? @relation(fields: [userID], references: [id])
}